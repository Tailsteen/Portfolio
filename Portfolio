  <script>
    const projects = {
      dataAnalyzer: {
        title: "Data Analyzer",
        description: "A C++ project showcasing my ability to analyze and process datasets. Includes multiple files with detailed functionality.",
        link: "https://github.com/Tailsteen/c-Project/blob/main/Project4_hev0011_Hannah_Vosteen.cpp"
      },
      project1: {
        title: "Loan Payment",
        description: "My first software construction project in C++, calculating loan payoff timelines based on input parameters.",
        link: "https://github.com/Tailsteen/c-Project/blob/main/project1_hev0011_Hannah_Vosteen.cpp"
      },
      assemblypro1: {
        title: "Assembly Project",
        description: "A final project demonstrating my skills in Assembly language programming and optimization.",
        link: "https://github.com/Tailsteen/c-Project/blob/main/assembly%20final%20project"
      }
    };

    function showProject(id) {
      const project = projects[id];
      if (!project) return;
      document.getElementById('modalTitle').textContent = project.title;
      document.getElementById('modalDescription').textContent = project.description;
      document.getElementById('modalLink').href = project.link;
      document.getElementById('projectModal').style.display = 'block';
    }

    function closeProject() {
      document.getElementById('projectModal').style.display = 'none';
    }
  </script>

